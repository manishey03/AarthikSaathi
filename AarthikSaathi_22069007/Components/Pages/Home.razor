    </div>
</div>

@code {
    private string Username { get; set; } = "User";  // Set this to the logged-in user's username

    private void Logout()
    {
        // Handle the logout functionality
        // For example, clearing the session or navigating to the login page
        NavigationManager.NavigateTo("/login");
    }
}
